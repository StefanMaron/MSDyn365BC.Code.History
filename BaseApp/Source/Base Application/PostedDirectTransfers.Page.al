                begin
                    CurrPage.SetSelectionFilter(TransMvmtHeader);
                    TransMvmtHeader.PrintRecords(true);
                end;
            }
            action("&Navigate")
            {
                ApplicationArea = Basic, Suite;
                Caption = '&Navigate';
                Image = Navigate;
                Promoted = true;
                PromotedCategory = Process;

