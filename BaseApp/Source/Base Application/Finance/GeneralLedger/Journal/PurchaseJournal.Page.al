    var
        JnlSelected: Boolean;
        IsHandled: Boolean;
    begin
        IsHandled := false;
        OnBeforeSelectTemplate(Rec, GenJnlManagement, IsHandled);
        if IsHandled then
            exit;

        GenJnlManagement.TemplateSelection(PAGE::"Purchase Journal", Enum::"Gen. Journal Template Type"::Purchases, false, Rec, JnlSelected);
        if not JnlSelected then
            Error('');
    end;

